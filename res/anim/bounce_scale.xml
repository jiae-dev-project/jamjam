<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/andoird"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:interpolator="@android:anim/accelerate_decelerate_interpolator" >

    <scale
        android1:duration="150"
        android1:fromXScale="1.0"
